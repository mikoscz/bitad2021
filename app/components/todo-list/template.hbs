<span>List of Todos:</span>

<form {{on "submit" this.addTodo}}>
  <input type="text" value={{this.title}} placeholder="Enter todo title..." {{on "change" this.setTodoTitle}}>
  <button type="submit">Add todo</button>
</form>

<ul>
  {{#each @todos as |todo|}}
    <Todo @todo={{todo}} />
  {{/each}}
</ul>
